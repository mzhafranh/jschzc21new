<!DOCTYPE html>
<html>

<head>
    <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-3">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Adding Data</h2>
            </div>
            <div class="card-body" style="padding-left: 0; padding-right: 0;">

                <form action="" method="post" style="padding: 16px 16px 0px 16px;">
                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="name" class="col-form-label">Name</label>
                        </div>
                        <div class="col-10">
                            <input type="text" name="name" class="form-control" placeholder="insert your name">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="height" class="col-form-label">Height</label>
                        </div>
                        <div class="col-10">
                            <input type="number" name="height" class="form-control" placeholder="insert your height">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="weight" class="col-form-label">Weight</label>
                        </div>
                        <div class="col-10">
                            <input type="number" name="weight" class="form-control" placeholder="insert your weight">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="birthdate">Date</label>
                        </div>
                        <div class="col-10">
                            <input type="date" class="form-control" name="birthdate">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="married">Is Married</label>
                        </div>
                        <div class="col-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="married" id="marriedNo" value="0" checked>
                                <label class="form-check-label" for="married">Not Yet</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="married" id="marriedYes" value="1">
                                <label class="form-check-label" for="married">Yes</label>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <input type="submit" class="btn btn-primary btn-sm" style="width: 90px; margin-right: 5px; margin-left: 10px;"
                        value="Save"></input>
                    <a href="/" class="btn btn-warning btn-sm" style="width: 90px;">Back</a>
                </div>
            </div>
            </form>

        </div>
    </div>
    <br>
    <script src="/javascripts/bootstrap.js"></script>
    <script>
        function userConfirm(name, index) {
            const userConfirmed = confirm(`Apakah yakin akan menghapus data ${name}?`);
            if (userConfirmed) {
                window.location.href = `/delete/${index}`
            }
        }
    </script>
</body>

</html>