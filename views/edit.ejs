<!DOCTYPE html>
<html>

<head>
    <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="container mt-3">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Adding Data</h2>
            </div>
            <div class="card-body" style="padding-left: 0; padding-right: 0;">

                <form action="" method="post" style="padding: 16px 16px 0px 16px;">
                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="title" class="col-form-label">Title</label>
                        </div>
                        <div class="col-10">
                            <input type="text" name="title" class="form-control" placeholder="insert your title">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="deadline" class="col-form-label">Deadline</label>
                        </div>
                        <div class="col-10">
                            <input type="date" name="deadline" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="complete" class="col-form-label">Complete</label>
                        </div>
                        <div class="col-10">
                            <input type="checkbox" name="complete" class="form-control">
                        </div>
                    </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <button type="submit" class="btn btn-primary btn-sm"
                        style="width: 36px; margin-right: 5px; margin-left: 10px;"><i
                            class="fa-solid fa-floppy-disk"></i></button>
                    <a href="/" class="btn btn-warning btn-sm" style="width: 36px;"><i
                            class="fa-solid fa-rotate-left"></i></a>
                </div>
            </div>
            </form>

        </div>
    </div>
    <br>
    <script src="/javascripts/bootstrap.js"></script>
    <script>
        function userConfirm(name, index) {
            const userConfirmed = confirm(`Apakah yakin akan menghapus data ${name}?`);
            if (userConfirmed) {
                window.location.href = `/delete/${index}`
            }
        }
    </script>
</body>

</html>